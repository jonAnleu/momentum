@page "/Collections"
@inject IDialogService DialogService
@inject CollectionService CollectionService
<style>
        .mud-overlay {
                pointer-events: none;
        }
</style>
<MudDivider Class="mt-n2"/>

<MudStack Class="mt-4 mb-20" Row="true" Spacing="6" AlignItems="AlignItems.Start">
    <CollectionsNavigationSideBar/>
    <MudStack Style="width: 1200px;">
        <ContainerToolbar/>
        <CollectionsBrowser Cards="_cards"/>
    </MudStack>
</MudStack>

@code {
        
    private List<Collection> _cards = new();

    protected override void OnInitialized()
    {
        _cards = CollectionService.GetAssets();
    }

}