
<MudAppBar Color="Color.Dark" Elevation="0">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
        OnClick="@(() => DrawerToggle())" />
    <MudText Class="px-4" Typo="Typo.h4" Color="Color.Warning"><strong>Momentum</strong></MudText>

    <MudSpacer />
        <MudToggleIconButton @bind-Toggled="_darkMode" @bind-value="_isDarkMode" Icon="@Icons.Material.Filled.LightMode" Color="Color.Inherit"
        ToggledIcon="@Icons.Material.Filled.DarkMode" ToggledColor="@Color.Warning" />
        <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Inherit" />
        <MudIconButton Icon="@Icons.Material.Filled.Notifications" Color="Color.Inherit" />
        <MudIconButton Class="rounded-circle" Icon="@Icons.Material.Filled.Person" Variant="Variant.Filled" Color="Color.Warning"  />
</MudAppBar>
<MudDrawer @bind-Open="@_drawerOpen" Color="Color.Dark" ClipMode="DrawerClipMode.Always" Variant="@DrawerVariant.Mini"
    OpenMiniOnHover="true" Breakpoint="Breakpoint.None">
    <MudNavMenu Color="Color.Warning" Bordered Margin="Margin.Dense">
        <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home" IconColor="Color.Inherit">
            Home</MudNavLink>
        <MudNavLink Href="/todo" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Checklist"
            IconColor="Color.Inherit">
            Todo</MudNavLink>
        <MudNavLink Href="/dashboard" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Outlined.AreaChart"
            IconColor="Color.Inherit">Dashboards</MudNavLink>
        <MudNavLink Href="/log" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.EditNote"
            IconColor="Color.Inherit">Logs</MudNavLink>
    </MudNavMenu>
</MudDrawer>

@code {
    private MudTheme _theme = new();

    bool _isDarkMode;
    bool _darkMode {get; set;}
    bool _drawerOpen = true;
    void DrawerToggle() => _drawerOpen = !_drawerOpen;

}