<MudTooltip Text="Add Campaign" Color="Color.Dark">
    <MudPaper Class="d-flex flex-grow-1 align-center pl-2" Outlined="true" @onclick="ToggleOpen">
        @if (File.Campaigns.Count == 0)
        {
        <MudText Typo="Typo.caption">Add Campaign</MudText>
        }
        else
        {
            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                <MudText Typo="Typo.caption">
                    @string.Join(", ", File.Campaigns)
                </MudText>
            </MudStack>
        }
        <MudSpacer/>
        <MudDivider Vertical="true" FlexItem="true"/>
        <MudIconButton Ripple="false" Icon="@Icons.Material.Sharp.KeyboardArrowRight" Size="Size.Small"/>
    </MudPaper>
</MudTooltip>

<MudPopover Open="@_open" Fixed="true" Class="pa-2">
    <MudStack Spacing="2">
        <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween" >
            <MudText Class="justify-start" Typo="Typo.caption">Add Campaign</MudText>
            <MudIconButton Variant="Variant.Filled" Icon="@Icons.Material.Filled.Refresh" Size="Size.Small"/>
        </MudStack>
        @if (File?.Campaigns != null)
        {
            <MudStack Row="true" AlignItems="AlignItems.Center" Wrap="Wrap.Wrap" Spacing="0">
                @foreach (var campaign in File.Campaigns)
                {
                    <MudChip T="string"
                             OnClose="@(() => RemoveCampaign(campaign))"
                             Size="Size.Small"
                             CloseIcon="@Icons.Material.Filled.Close">
                        <MudText Typo="Typo.caption" Color="Color.Primary">@campaign</MudText>
                    </MudChip>
                }
            </MudStack>
        }
        <MudSelect T="string"
                   MultiSelection="true"
                   Variant="Variant.Outlined"
                   Margin="Margin.Dense"
                   Placeholder="Select Campaign"
                   Underline="false"
                   SelectedValues="File.Campaigns"
                   SelectedValuesChanged="@(vals => File.Campaigns = vals.ToList())">
            @foreach (var campaign in _campaigns)
            {
                <MudSelectItem Value="@campaign">@campaign</MudSelectItem>
            }
        </MudSelect>
        
        <MudStack Class="mt-3" Row="true" Justify="Justify.FlexEnd">
            <MudButton Variant="Variant.Filled" Color="Color.Error" Size="Size.Small" OnClick="ToggleOpen">OK</MudButton>
        </MudStack>
    </MudStack>
</MudPopover>

@code{
    [Parameter] public UploadedFile? File { get; set; }
    private bool _open;
    private void ToggleOpen() => _open = !_open;
    
    private readonly string[] _campaigns =
    {
        "ConferenceCon 2025",
        "Feel the beat",
        "City Festival",
        "Snow Season"
    };
    private void RemoveCampaign(string campaign)
    {
        if (File?.Campaigns == null) return;
        File.Campaigns.Remove(campaign);
    }
    
 
}