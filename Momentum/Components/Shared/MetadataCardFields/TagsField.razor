<MudTooltip Text="Add Tags" Color="Color.Dark">
    <MudPaper Class="d-flex flex-grow-1 align-center pl-2" Outlined="true" @onclick="ToggleOpen" >
        <MudText Typo="Typo.caption">Add Tags</MudText>
        <MudSpacer/>
        <MudDivider Vertical="true" FlexItem="true" />
        <MudIconButton Ripple="false" 
                       Icon="@Icons.Material.Sharp.KeyboardArrowRight" Size="Size.Small"/>
    </MudPaper>
</MudTooltip>

<MudPopover Open="@_open" Fixed="true" Class="pa-2">
    <MudStack Spacing="2">
        <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween" >
            <MudText Class="justify-start" Typo="Typo.caption">Add Tags</MudText>
            <MudIconButton Variant="Variant.Filled"
                           Icon="@Icons.Material.Filled.Refresh" Size="Size.Small"/>
        </MudStack>

        <MudSelect T="string"
                   Variant="Variant.Outlined"
                   Margin="Margin.Dense" 
                   Placeholder="Add Tags"
                   Underline="false"
                   Immediate="true">
            <MudSelectItem T="string">Tag</MudSelectItem>
        </MudSelect>       
        <MudStack Class="mt-3" Row="true" Justify="Justify.FlexEnd">
            <MudButton Variant="Variant.Filled" Color="Color.Error" 
                       Size="Size.Small" OnClick="ToggleOpen">OK</MudButton>
        </MudStack>
    </MudStack>
</MudPopover>

@code{
    [Parameter] public UploadedFile? File { get; set; } 

    private bool _open;
    private bool _isVisible;

    private void ToggleOpen() => _open = !_open;
      

}