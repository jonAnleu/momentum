<MudTooltip Text="Add Theme" Color="Color.Dark">
    <MudPaper Class="d-flex flex-grow-1 align-center pl-2" Outlined="true" @onclick="ToggleOpen">
        @if (File.Themes.Count == 0)
        {
        <MudText Typo="Typo.caption">Add Theme</MudText>
        }
        else
        {
            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                <MudText Typo="Typo.caption">
                    @string.Join(", ", File.Themes)
                </MudText>
            </MudStack>
        }
        <MudSpacer/>
        <MudDivider Vertical="true" FlexItem="true"/>
        <MudIconButton Ripple="false" Icon="@Icons.Material.Sharp.KeyboardArrowRight" Size="Size.Small"/>
    </MudPaper>
</MudTooltip>

<MudPopover Open="@_open" Fixed="true" Class="pa-2">
    <MudStack Spacing="2">
        <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween" >
            <MudText Class="justify-start" Typo="Typo.caption">Add Theme</MudText>
            <MudIconButton Variant="Variant.Filled" Icon="@Icons.Material.Filled.Refresh" Size="Size.Small"/>
        </MudStack>
        @if (File?.Themes != null)
        {
            <MudStack Row="true" AlignItems="AlignItems.Center" Wrap="Wrap.Wrap" Spacing="0">
                @foreach (var theme in File.Themes)
                {
                    <MudChip T="string"
                             OnClose="@(() => RemoveTheme(theme))"
                             Size="Size.Small"
                             CloseIcon="@Icons.Material.Filled.Close">
                        <MudText Typo="Typo.caption" Color="Color.Primary">@theme</MudText>
                    </MudChip>
                }
            </MudStack>
        }
        <MudSelect T="string"
                   MultiSelection="true"
                   Variant="Variant.Outlined"
                   Margin="Margin.Dense"
                   Placeholder="Select Theme"
                   Underline="false"
                   SelectedValues="File.Themes"
                   SelectedValuesChanged="@(vals => File.Themes = vals.ToList())">
            @foreach (var theme in _themes)
            {
                <MudSelectItem Value="@theme">@theme</MudSelectItem>
            }
        </MudSelect>
        <MudStack Class="mt-3" Row="true" Justify="Justify.FlexEnd">
            <MudButton Variant="Variant.Filled" Color="Color.Error" Size="Size.Small" OnClick="ToggleOpen">OK</MudButton>
        </MudStack>
    </MudStack>
</MudPopover>

@code{
    [Parameter] public UploadedFile? File { get; set; }
    private bool _open;
    private void ToggleOpen() => _open = !_open;
    
    
    private readonly string[] _themes =
    {
        "Endorsement", "Enjoyment", "Holiday", "Lifestyle", "Sustainability"
    };
    private void RemoveTheme(string launch)
    {
        if (File?.Themes == null) return;
        File.Themes.Remove(launch);
    }

  
}
