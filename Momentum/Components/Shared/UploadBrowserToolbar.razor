<MudStack Row="true"  Justify="Justify.SpaceBetween">
    <CardSelectedResultChip SelectedCount="@SelectedCount" TotalCount="@TotalCount"  />
    <MudStack Row="true" AlignItems="AlignItems.Center">
        <SelectAllButtonGroup File="File" OnSelectionChanged="OnSelectionChanged" />
        <CancelUploadButton/>
    </MudStack>
</MudStack>

@code {
    [Parameter] public UploadedFile? File { get; set; } 
    
    [Parameter] public EventCallback<bool> OnSelectionChanged { get; set; }
    private int SelectedCount => File?.IsSelected == true ? 1 : 0;
    private int TotalCount => 1; 
    
}