<MudStack Row="true"  Justify="Justify.SpaceBetween">
    <CardSelectedResultChip TotalCount="@TotalCount" SelectedCount="@SelectedCount" />
    <MudStack Row="true" AlignItems="AlignItems.Center">
        <SelectAllButtonGroup OnSelectAllChanged="OnSelectAllChanged" />
        <CancelUploadButton/>
    </MudStack>
</MudStack>

@code {
    [Parameter] public int SelectedCount { get; set; }
    [Parameter] public int TotalCount { get; set; }
    [Parameter] public EventCallback<bool> OnSelectAllChanged { get; set; }
}