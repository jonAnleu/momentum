@inject FileUploadStateService FileState

<MudStack>

    @if (File != null)
    {
        <UploadFileCard File="@File"/>
    }
    else
    {
        <MudText>No file selected</MudText>
    }
</MudStack>

@code {
    [Parameter] public UploadedFile? File { get; set; }
    [Parameter] public EventCallback<UploadedFile> OnFileSelected { get; set; }

    private async Task HandleCardSelected(UploadedFile file)
    {
        await OnFileSelected.InvokeAsync(file);
    }
}