@inject FileUploadStateService FileState


  
<UploadFileCard File="@File"
                IsSelected="@IsSelected"
                ShowOptionalFields="@ShowOptionalFields"
                OnToggleSelected="ToggleSelection"/>
    
  

@code {
    [Parameter] public UploadedFile? File { get; set; }
    [Parameter] public bool IsSelected { get; set; }
    [Parameter] public bool ShowOptionalFields { get; set; }
    
    [Parameter] public EventCallback<bool> OnSelectionChanged { get; set; }
    
    private async Task ToggleSelection()
    {
        await OnSelectionChanged.InvokeAsync(!IsSelected);
    }
}