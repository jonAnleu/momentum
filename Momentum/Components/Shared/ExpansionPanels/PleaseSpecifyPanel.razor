<MudExpansionPanel HeaderClass="pa-0" 
                   Gutters="false" 
                   Dense="true" 
                   HideIcon="true">
    <TitleContent>
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
            <MudIcon Size="Size.Small">
                <i class="fa-solid fa-sitemap fa-2xs"></i>
            </MudIcon>
            <MudText Typo="Typo.subtitle2">Please Specify</MudText>
            <MudText Color="Color.Error" Typo="Typo.body2">*</MudText>
        </MudStack>
    </TitleContent>
    
    <ChildContent>
        <MudTextField @bind-Value="File.UsageRightsDetails"
                      T="string" 
                      Variant="Variant.Outlined"
                      Margin="Margin.Dense"
                      Placeholder="Add Please Specify" 
                      Typo="Typo.caption"
                      Immediate="true"
                      Underline="false"/>   
    </ChildContent>
</MudExpansionPanel>

@code{
    [Parameter] public UploadedFile File { get; set; } = default!;

}