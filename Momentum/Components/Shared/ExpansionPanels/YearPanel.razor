<MudExpansionPanel HeaderClass="pa-0" Gutters="false" Dense="true" HideIcon="true">
    <TitleContent>
        <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                <MudIcon Size="Size.Small">
                    <i class="fa-solid fa-tags fa-2xs"></i>
                </MudIcon>
                <MudText Typo="Typo.subtitle2">Year</MudText>
            </MudStack>
            <VisibilityToggleButton ShowOptional="ShowOptional" OnVisibilityChanged="OnVisibilityChanged" />
        </MudStack>
    </TitleContent>
    <ChildContent>
        @if (!string.IsNullOrEmpty(SelectedTag))
        {
            <MudChip T="string" OnClose="Closed" Size="Size.Small" CloseIcon="@Icons.Material.Filled.Close" >
                <MudText Typo="Typo.caption" Color="Color.Primary">@SelectedTag</MudText> 
            </MudChip>
        }
        <MudTextField T="string"
                   @bind-Value="SelectedTag"
                   Variant="Variant.Outlined"
                   Margin="Margin.Dense"
                   Placeholder="Enter Year"
                   Underline="false">
            @foreach (var tag in _tags)
            {
                <MudSelectItem Value="tag">@tag</MudSelectItem>
            }
        </MudTextField>
       
    </ChildContent>
</MudExpansionPanel>

@code {
    [Parameter] public bool ShowOptional { get; set; }
    [Parameter] public EventCallback<bool> OnVisibilityChanged { get; set; }
    
    private void ToggleVisibility()
    {
        OnVisibilityChanged.InvokeAsync(!ShowOptional);
    }

    private string? SelectedTag { get; set; }

    void Closed(MudChip<string> chip) {
        SelectedTag = null; 
    }

    private readonly string[] _tags =
    {
        "Adults", "Kids", "Teenagers", "Young Adults"
    };
}