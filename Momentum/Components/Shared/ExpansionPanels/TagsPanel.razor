<MudExpansionPanel HeaderClass="pa-0" Gutters="false" Dense="true" HideIcon="true">
    <TitleContent>
        <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                <MudIcon Icon="@Icons.Material.Sharp.Discount"  Style="font-size: 14px"/>
                <MudText Typo="Typo.subtitle2">Tags</MudText>
            </MudStack>
            <VisibilityToggleButton ShowOptional="ShowOptional" OnVisibilityChanged="ToggleVisibility"/>
        </MudStack>
    </TitleContent>
    <ChildContent>
        <MudSelect T="string"
                   @bind-Value="SelectedCollection"
                   Variant="Variant.Outlined"
                   Margin="Margin.Dense"
                   CloseIcon="false"
                   OpenIcon=""
                   Placeholder="Add Tags"
                   Underline="false">
            @foreach (var collection in _collections)
            {
                <MudSelectItem Value="collection">@collection</MudSelectItem>
            }
        </MudSelect>
       
    </ChildContent>
</MudExpansionPanel>

@code {
    [Parameter] public bool ShowOptional { get; set; }
    [Parameter] public EventCallback<bool> OnVisibilityChanged { get; set; }
    
    private void ToggleVisibility()
    {
        OnVisibilityChanged.InvokeAsync(!ShowOptional);
    }

        private string? SelectedCollection { get; set; }

       

        private readonly string[] _collections =
        {
            "Adults", "Kids", "Teenagers", "Young Adults"
        };
}