<MudExpansionPanel HeaderClass="pa-0" Gutters="false" Dense="true" HideIcon="true">
    <TitleContent>
        <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                <MudIcon Size="Size.Small">
                    <i class="fa-solid fa-inbox fa-2xs"></i>
                </MudIcon>
                <MudText Typo="Typo.subtitle2">Collections</MudText>
            </MudStack>
        </MudStack>
    </TitleContent>
    <ChildContent>
        <MudText>Please select a collection or create a new one by typing a name</MudText>
        <MudSelect T="string"
                   PopoverClass="pa-2"
                   @bind-Value="SelectedCollection"
                   Variant="Variant.Outlined"
                   Margin="Margin.Dense"
                   CloseIcon="false"
                   OpenIcon=""
                   Placeholder="Select or add collection"
                   Underline="false">
            @foreach (var collection in _collections)
            {
                <MudSelectItem Value="collection">@collection</MudSelectItem>
            }
        </MudSelect>
    </ChildContent>
</MudExpansionPanel>


@code {
    private string? SelectedCollection { get; set; }



    private readonly string[] _collections =
    {
        "Audio", "Document", "Graphic/Visual", "Photography", "Video"
    };
}