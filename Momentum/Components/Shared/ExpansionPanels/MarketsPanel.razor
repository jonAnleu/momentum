<MudExpansionPanel HeaderClass="pa-0" Gutters="false" Dense="true" HideIcon="true">
    <TitleContent>
        <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                <MudIcon Size="Size.Small">
                    <i class="fa-solid fa-sitemap fa-2xs"></i>
                </MudIcon>
                <MudText Typo="Typo.subtitle2">Markets</MudText>
            </MudStack>
            <VisibilityToggleButton />
        </MudStack>
    </TitleContent>
    <ChildContent>
        <MudForm>
            <MudStack Class="mb-6" Row="true" AlignItems="AlignItems.Center" Spacing="0" >
                <MudIconButton Icon="@Icons.Material.Filled.RadioButtonUnchecked" Size="Size.Small" OnClick="Reset"/>
                <MudText Typo="Typo.body2">Select All</MudText>
            </MudStack>
            <MudRadioGroup @bind-Value="SelectedOption">
                <MudStack Spacing="0">
                    <MudRadio Value="@("Americas")" Size="Size.Small" Dense="true">Americas</MudRadio>
                    <MudRadio Value="@("Asia Pacific")" Size="Size.Small" Dense="true">Asia Pacific</MudRadio>
                    <MudRadio Value="@("Europe")" Size="Size.Small" Dense="true">Europe</MudRadio>
                    <MudRadio Value="@("Global")" Size="Size.Small" Dense="true">Global</MudRadio>
                </MudStack>
            </MudRadioGroup>
        </MudForm>
    </ChildContent>
</MudExpansionPanel>

@code {
    public string SelectedOption { get; set; }

    private void Reset()
    {
        SelectedOption = null;
    }
}