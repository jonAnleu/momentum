<MudExpansionPanel HeaderClass="pa-0" Gutters="false" Dense="true" HideIcon="true">
    <TitleContent>
        <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                <MudIcon Size="Size.Small">
                    <i class="fa-solid fa-sitemap fa-2xs"></i>
                </MudIcon>
                <MudText Typo="Typo.subtitle2">Launch</MudText>
            </MudStack>
            <VisibilityToggleButton ShowOptional="ShowOptional" OnVisibilityChanged="ToggleVisibility"/>
        </MudStack>
    </TitleContent>
    <ChildContent>
        @if (File?.Launches != null)
        {
            <MudStack Row="true" AlignItems="AlignItems.Center" Wrap="Wrap.Wrap" Spacing="0">
                @foreach (var launch in File.Launches)
                {
                    <MudChip T="string"
                             OnClose="@(() => RemoveLaunch(launch))"
                             Size="Size.Small"
                             CloseIcon="@Icons.Material.Filled.Close">
                        <MudText Typo="Typo.caption" Color="Color.Primary">@launch</MudText>
                    </MudChip>
                }
            </MudStack>
        }
        <MudSelect T="string"
                   MultiSelection="true"
                   Variant="Variant.Outlined"
                   Margin="Margin.Dense"
                   Placeholder="Select Launch"
                   Underline="false"
                   SelectedValues="File.Launches"
                   SelectedValuesChanged="@(vals => File.Launches = vals.ToList())">
            @foreach (var launch in _launches)
            {
                <MudSelectItem Value="@launch">@launch</MudSelectItem>
            }
        </MudSelect>
    </ChildContent>
</MudExpansionPanel>

@code {
    [Parameter] public UploadedFile? File { get; set; }
    [Parameter] public bool ShowOptional { get; set; }
    [Parameter] public EventCallback<bool> OnVisibilityChanged { get; set; }
    
    private void ToggleVisibility()
    {
        OnVisibilityChanged.InvokeAsync(!ShowOptional);
    }
    private readonly string[] _launches =
    {
       "Autumn", "Spring", "Summer", "Winter"
    };
    private void RemoveLaunch(string launch)
    {
        if (File?.Launches == null) return;
        File.Launches.Remove(launch);
    }
 
}