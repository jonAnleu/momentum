<MudExpansionPanel HeaderClass="pa-0" Class="pa-0" 
                   Gutters="false" Dense="true" 
                   HideIcon="true">
    <TitleContent>
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
            <MudIcon Size="Size.Small">
                <i class="fa-solid fa-sitemap fa-2xs"></i>
            </MudIcon>
            <MudText Typo="Typo.subtitle2">Asset Type</MudText>
            <MudText Color="Color.Error" Typo="Typo.body2">*</MudText>
        </MudStack>
    </TitleContent>
    <ChildContent>
        @if (!string.IsNullOrEmpty(SelectedAssetType))
        {
            <MudChip T="string" OnClose="Closed" Size="Size.Small" CloseIcon="@Icons.Material.Filled.Close" >
               <MudText Typo="Typo.caption" Color="Color.Primary">@SelectedAssetType</MudText> 
            </MudChip>
        }
        <MudSelect T="string"
                   @bind-Value="SelectedAssetType"
                   Margin="Margin.Dense" 
                   CloseIcon="false"
                   Placeholder="Enter Asset Type"
                   Underline="false">
            @foreach (var assetType in _assetTypes)
            {
                <MudSelectItem Value="assetType">@assetType</MudSelectItem>
            }
        </MudSelect>
    </ChildContent>
</MudExpansionPanel>

@code {
    private string? SelectedAssetType { get; set; }

    void Closed(MudChip<string> chip) {
        SelectedAssetType = null; 
    }

    private readonly string[] _assetTypes =
    {
        "Audio", "Document", "Graphic/Visual", "Photography", "Video"
    };
}