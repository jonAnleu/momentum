<MudExpansionPanel HeaderClass="pa-0" Class="pa-0" 
                   Gutters="false" Dense="true" 
                   HideIcon="true">
    <TitleContent>
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
            <MudIcon Size="Size.Small">
                <i class="fa-solid fa-sitemap fa-2xs"></i>
            </MudIcon>
            <MudText Typo="Typo.subtitle2">Asset Type</MudText>
            <MudText Color="Color.Error" Typo="Typo.body2">*</MudText>
        </MudStack>
    </TitleContent>

    <ChildContent>

        @if (!string.IsNullOrEmpty(File?.AssetType))
        {
            <MudChip T="string" OnClose="ClearAssetType" Size="Size.Small" CloseIcon="@Icons.Material.Filled.Close">
                <MudText Typo="Typo.caption" Color="Color.Primary">@File.AssetType</MudText>
            </MudChip>
        }

        <MudSelect T="string"
                   @bind-Value="File.AssetType"
                   Variant="Variant.Outlined"
                   Margin="Margin.Dense" 
                   Placeholder="Enter Asset Type"
                   Underline="false"
                   Immediate="true">
            @foreach (var assetType in _assetTypes)
            {
                <MudSelectItem Value="@assetType">@assetType</MudSelectItem>
            }
        </MudSelect>

    </ChildContent>
</MudExpansionPanel>

@code {
    [Parameter] public UploadedFile? File { get; set; }

    private readonly string[] _assetTypes =
    {
        "Audio", "Document", "Graphic/Visual", "Photography", "Video"
    };

    private void ClearAssetType()
    {
        if (File is not null)
            File.AssetType = string.Empty;
    }
}